{
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.{j,t}s"
    ]
  },
  "extends": [
    "tslint-eslint-rules",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "jsx-no-multiline-js": false,
    "react-hooks-nesting": "error"
  }
}
